<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">"
    
    <ImageView
        android:id="@+id/community_img_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_head"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    <TextView
        android:id="@+id/community_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textColorHint="#ffcccccc"
        android:textSize="20sp"/>
    
    <ImageView
        android:id="@+id/community_img_view"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="fitStart">"
    </ImageView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">"
	    <TextView
	        android:id="@+id/txt_community_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:gravity="left"/>
	    "
	    <ImageButton
	        android:id="@+id/community_btn_comment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/coment_pressed"/>
    </RelativeLayout>
    <ListView 
	        android:id="@+id/list_community_comm"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        ></ListView>
</LinearLayout>
    

</LinearLayout>
